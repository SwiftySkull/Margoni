{% extends 'base.html.twig' %}

{% block title %}Recherche par collection{% endblock %}

{% block situationActive %}active{% endblock %}

{% block body %}

<h1>Recherche par collection</h1>

<h2>Liste des collections</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for situation in situations %}
        <tr>
        <th scope="row">{{ situation.id }}</th>
        <td><a href="{{ path('situation_read', {id:situation.id}) }}">{{ situation.collection }}</a></td>
        <td>
          <form action="{{ path('situation_edit', {id:situation.id}) }}" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('add-edit-item') }}"/>
            <button class="btn btn-warning">Modifier</button>
          </form>
        </td>
        <td>
          <form action="{{ path('situation_delete', {id:situation.id}) }}" onsubmit="return confirm('Supprimer la collection ?')" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
            <input type="hidden" name="_method" value="DELETE"/>
            <button class="btn btn-danger">Supprimer</button>
          </form>
        </td>
        </tr>
    {% endfor %}
  </tbody>
</table>
<form action="{{ path('situation_add') }}" method="POST">
  <input type="hidden" name="token" value="{{ csrf_token('add-edit-item') }}"/>
  <button class="btn btn-success">Ajouter une nouvelle situation de collection</button>
</form>

{% endblock %}
