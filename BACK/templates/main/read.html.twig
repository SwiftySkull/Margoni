{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>
    <img src="{{ painting.picture }}" />
    <h2>{{ painting.title }}</h2>
    {% for category in painting.categories %}
        <span class="badge bg-primary">{{ category.name }}</span>
    {% endfor %}
    <p>Date de création : {{ painting.date|date('d-m-Y') }}</p>
    <p>Taille : {{ painting.height }}x{{ painting.width }}</p>
    <p>Format : {{ painting.size.format }}</p>
    <p>Encadrement : {{ painting.frame.framing }}</p>
    <p>Collection : {{ painting.situation.collection }}</p>
    <p>Localisation : {{ painting.location }}</p>
    <p>Information : {{ painting.information }}</p>
</div>
{% endblock %}
