{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block homeActive %}active{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>

    {% for paint in paintings %}
        <div>
            <p><b><a href="{{ path('read_paint', {id:paint.id}) }}">{{ paint.title }}</a></b> peint en {{ paint.date is not same as null ? paint.date|date('d-m-Y') : 'Non précisée.' }} ({{ paint.size.format ?? 'Non précisé.' }}) 
            {% if paint.height is not same as null and paint.width is not same as null %}
                {{ paint.height }}x{{ paint.width }}
            {% else %}
                Non précisée
            {% endif %}
            </p>
            {% for category in paint.categories %}
                <span class="badge bg-primary">{{ category.name }}</span>
            {% endfor %}
            <p>Encadrement : {{ paint.frame.framing ?? 'Non précisé.' }}</p>
            <p>Collection : {{ paint.situation.collection ?? 'Non précisée.' }}</p>
            <p>Localisation : {{ paint.location ?? 'Non précisée.' }}</p>
        </div>
        <img src="{{ paint.picture }}" style="height: 150px; width: 150px"/>
        <p>Information : {{ paint.information ?? 'Pas d\'information complémentaire actuellement.' }}</p>
        <hr>
    {% endfor %}

</div>
{% endblock %}
